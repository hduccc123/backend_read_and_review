<!DOCTYPE html>
<html>

<head>
    <title>Danh sách sách</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .pagination a,
        .pagination strong {
            margin: 0 5px;
            padding: 5px 10px;
            border: 1px solid #007bff;
            color: #007bff;
            text-decoration: none;
        }

        .pagination a:hover {
            background-color: #007bff;
            color: white;
        }

        .pagination strong {
            background-color: #007bff;
            color: white;
        }
    </style>
</head>

<body>
    <div>
        <form method="GET" action="create-book" class="d-flex justify-content-end mb-3">
            <button type="submit" class="btn btn-primary">Thêm sách</button>
        </form>
    </div>
    <div class="container mt-4">
        <h1>Danh sách sách</h1>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên sách</th>
                    <th>Thể loại</th>
                    <th>Tác giả</th>
                    <th>Nhà xuất bản</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                    <th>Ảnh bìa</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book=> { %>
                    <tr>
                        <td>
                            <%= book.id %>
                        </td>
                        <td>
                            <%= book.name %>
                        </td>
                        <td>
                            <%= book.category ? book.category.name : '' %>
                        </td>
                        <td>
                            <%= book.author %>
                        </td>
                        <td>
                            <%= book.publisher %>
                        </td>
                        <td>
                            <%= book.quantity %>
                        </td>
                        <td>
                            <%= book.price %>
                        </td>
                        <td>
                            <% const cover=book.images.find(img=> img.is_cover);
                                if (cover) {
                                %>
                                <img src="<%= cover.url %>" alt="cover" width="80" height="100">
                                <% } else { %>
                                    Không có ảnh
                                    <% } %>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="/edit-book/<%= book.id %>" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/delete-book/<%= book.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <!-- Thanh phân trang -->
        <div class="pagination">
            <!-- Nút Trang trước -->
            <% if (meta.currentPage> 1) { %>
                <a href="/books?page=<%= meta.currentPage - 1 %>&limit=<%= meta.limit %>">« Trước</a>
                <% } %>

                    <!-- Các số trang -->
                    <% for (let i=1; i <=meta.totalPages; i++) { %>
                        <% if (i===meta.currentPage) { %>
                            <strong>
                                <%= i %>
                            </strong>
                            <% } else { %>
                                <a href="/books?page=<%= i %>&limit=<%= meta.limit %>">
                                    <%= i %>
                                </a>
                                <% } %>
                                    <% } %>

                                        <!-- Nút Trang sau -->
                                        <% if (meta.currentPage < meta.totalPages) { %>
                                            <a href="/books?page=<%= meta.currentPage + 1 %>&limit=<%= meta.limit %>">Sau
                                                »</a>
                                            <% } %>
        </div>
    </div>
</body>

</html>