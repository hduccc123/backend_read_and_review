<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Book</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">Update Book</h3>
                <form method="POST" action="/update-book/<%= book.id %>" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name" class="form-label">Book Name:</label>
                        <input type="text" class="form-control" id="name" placeholder="Book Name" name="name"
                            value="<%= book.name %>">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea name="description" class="form-control" id="description"
                            placeholder="Description"><%= book.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="author" class="form-label">Author:</label>
                        <input type="text" class="form-control" id="author" placeholder="Author" name="author"
                            value="<%= book.author %>">
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category:</label>
                        <select name="category_id" class="form-select" id="category">
                            <% categories.forEach(c=> { %>
                                <option value="<%= c.id %>" <%=c.id===book.category_id ? 'selected' : '' %> >
                                    <%= c.name %>
                                </option>
                                <% }) %>
                        </select><br>
                    </div>
                    <div class="mb-3">
                        <label for="publisher" class="form-label">Publisher:</label>
                        <input type="text" class="form-control" id="publisher" placeholder="Publisher" name="publisher"
                            value="<%= book.publisher %>">
                    </div>
                    <div class="mb-3">
                        <label for="quantity" class="form-label">Quantity:</label>
                        <input type="number" class="form-control" id="quantity" placeholder="Quantity" name="quantity"
                            value="<%= book.quantity %>">
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Cover Image:</label>
                        <input type="file" class="form-control" id="image" name="cover" accept="image/*">
                    </div>
                    <div class="mb-3">
                        <img src="<%= image ? '/' + image.url : '' %>" alt="cover" width="300" height="150">
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Update Book</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>

</html>