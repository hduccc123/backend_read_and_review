<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <title>Quản lý sản phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container py-4">

    <h1 class="mb-4">Quản lý sản phẩm</h1>

    <!-- Form thêm sản phẩm -->
    <div class="card mb-4">
        <div class="card-header">Thêm sản phẩm mới</div>
        <div class="card-body">
            <form action="/create-product" method="POST" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="name" class="form-label">Tên sản phẩm</label>
                        <input type="text" class="form-control" name="name" required>
                    </div>
                    <div class="col-md-6">
                        <label for="price" class="form-label">Giá</label>
                        <input type="number" class="form-control" name="price" step="0.01" required>
                    </div>
                    <div class="col-md-6">
                        <label for="stock" class="form-label">Số lượng</label>
                        <input type="number" class="form-control" name="stock" required>
                    </div>
                    <div class="col-md-6">
                        <label for="image" class="form-label">Ảnh sản phẩm</label>
                        <input type="file" class="form-control" name="image" accept="image/*" required>
                    </div>
                    <div class="col-12">
                        <label for="description" class="form-label">Mô tả</label>
                        <textarea class="form-control" name="description" rows="3" required></textarea>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Danh sách sản phẩm -->
    <div class="card">
        <div class="card-header">Danh sách sản phẩm</div>
        <div class="card-body">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Ảnh</th>
                        <th>Tên</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Mô tả</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (products && products.length> 0) { %>
                        <% products.forEach(product=> { %>
                            <tr>
                                <td>
                                    <%= product.id %>
                                </td>
                                <td><img src="<%= product.image %>" width="50"></td>
                                <td>
                                    <%= product.name %>
                                </td>
                                <td>
                                    <%= product.price %>
                                </td>
                                <td>
                                    <%= product.stock %>
                                </td>
                                <td>
                                    <%= product.description %>
                                </td>
                                <td>
                                    <a href="/edit-product/<%= product.id %>" class="btn btn-warning btn-sm">Sửa</a>
                                    <a href="/delete-product/<%= product.id %>" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">Xóa</a>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center">Chưa có sản phẩm nào</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

</body>

</html>