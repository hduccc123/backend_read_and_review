<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title || "Book Store" %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Header -->
    <nav class="navbar navbar-light bg-light border-bottom">
        <div class="container">
            <div class="row align-items-center w-100 g-3">

                <!-- Logo -->
                <div class="col-auto">
                    <a class="navbar-brand fw-bold text-success" href="/">BookStore</a>
                </div>

                <!-- Spacer = bề rộng sidebar (2/12) để can hàng với banner -->
                <div class="d-none d-md-block col-md-2"></div>

                <!-- Ô tìm kiếm: bắt đầu đúng vị trí mép trái banner -->
                <div class="col-12 col-md-6">
                    <form class="mb-0" method="get" action="/search">
                        <div class="input-group flex-nowrap">
                            <input class="form-control" type="search" name="q" placeholder="Tìm kiếm sản phẩm...">
                            <button class="btn btn-success text-nowrap" type="submit">Tìm kiếm</button>
                        </div>
                    </form>
                </div>

                <!-- Đăng nhập / Đăng ký -->
                <div class="col-auto ms-md-auto">
                    <a href="/login" class="btn btn-sm btn-outline-primary me-2">Đăng nhập</a>
                    <a href="/register" class="btn btn-sm btn-success">Đăng ký</a>
                </div>

            </div>
        </div>
    </nav>

    <!-- Header -->
    <div class="container mt-3">
        <div class="row">
            <!-- Sidebar Danh mục -->
            <aside class="col-md-2">
                <div class="list-group">
                    <% categories.forEach(cat=> { %>
                        <a href="/category/<%= cat.id %>" class="list-group-item list-group-item-action">
                            <%= cat.name %>
                        </a>
                        <% }) %>
                </div>
            </aside>

            <!-- Nội dung chính -->
            <main class="col-md-10">
                <%- body %>
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light py-3 mt-4 border-top">
        <div class="container text-center">
            <p>&copy; 2025 BookStore. All rights reserved.</p>
        </div>
    </footer>
</body>

</html>